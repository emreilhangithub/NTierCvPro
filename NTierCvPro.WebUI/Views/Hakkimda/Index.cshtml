@model Hakkimda
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (Model != null)
{
    <br />
    <h2>Hakkımda Düzenleme Sayfası</h2>
    <br />

    <form method="post">


        <label>Ad</label>
        <input type="text" name="Ad" value="@Model.Ad" class="form-control" />
        <br />

        <label>Soyad</label>
        <input type="text" name="Soyad" value="@Model.Soyad" class="form-control" />
        <br />

        <label>Adres</label>
        <input type="text" name="Adres" value="@Model.Adres" class="form-control" />
        <br />

        <label>Telefon</label>
        <input type="text" name="Telefon" value="@Model.Telefon" class="form-control" />
        <br />

        <label>Mail Adresi</label>
        <input type="text" name="Mail" value="@Model.Mail" class="form-control" />
        <br />

        <label>Resim</label>
        <input type="text" name="Resim" value="@Model.Resim" class="form-control" />
        <br />

        <label>Açıklama</label>
        <textarea rows="5" class="form-control" name="Aciklama">@Model.Aciklama</textarea>


        <br />
        <button class="btn btn-primary">Güncelle</button>

    </form>
}
else
{
    <br />
    <h2>Hakkımda Ekleme Sayfası</h2>
    <br />

    <form method="post" action="@Url.Action("HakkimdaEkle", "Hakkimda")">
        <label>Ad</label>
        <input type="text" name="Ad" class="form-control" />
        <br />

        <label>Soyad</label>
        <input type="text" name="Soyad" class="form-control" />
        <br />

        <label>Adres</label>
        <input type="text" name="Adres" class="form-control" />
        <br />

        <label>Telefon</label>
        <input type="text" name="Telefon" class="form-control" />
        <br />

        <label>Mail Adresi</label>
        <input type="text" name="Mail" class="form-control" />
        <br />

        <label>Resim</label>
        <input type="text" name="Resim" class="form-control" />
        <br />

        <label>Açıklama</label>
        <textarea rows="5" class="form-control" name="Aciklama"></textarea>

        <br />
        <button class="btn btn-success">Ekle</button>
    </form>
}

